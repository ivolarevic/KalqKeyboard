<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kalq_keyboard_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:layout_width="258dp"
        android:layout_height="258dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/right">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/m"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="m"
                android:onClick="letter"/>

            <Button
                android:id="@+id/b"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="b"
                android:onClick="letter"/>

            <Button
                android:id="@+id/w"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="w"
                android:onClick="letter"/>

            <Button
                android:id="@+id/h"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="h"
                android:onClick="letter"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/p"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="p"
                android:onClick="letter"/>

            <Button
                android:id="@+id/space"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text=""
                android:onClick="space"
                />

            <Button
                android:id="@+id/x"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="x"
                android:onClick="letter"/>

            <Button
                android:id="@+id/c"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="c"
                android:onClick="letter"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/r"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="r"
                android:onClick="letter"/>

            <Button
                android:id="@+id/y"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="y"
                android:onClick="letter"/>

            <Button
                android:id="@+id/s"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="s"
                android:onClick="letter"/>

            <Button
                android:id="@+id/z"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="z"
                android:onClick="letter"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/d"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="d"
                android:onClick="letter"/>

            <Button
                android:id="@+id/n"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="n"
                android:onClick="letter"/>

            <Button
                android:id="@+id/f"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="f"
                android:onClick="letter"/>

            <Button
                android:id="@+id/v"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="v"
                android:onClick="letter"/>
        </TableRow>
    </TableLayout>


    <TableLayout
        android:layout_width="258dp"
        android:layout_height="258dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/g"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="1dp"
                android:text="g"
                android:onClick="letter"/>

            <Button
                android:id="@+id/t"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="t"
                android:onClick="letter"/>

            <Button
                android:id="@+id/o"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="o"
                android:onClick="letter"/>

            <Button
                android:id="@+id/j"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="j"
                android:onClick="letter"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/i"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="i"
                android:onClick="letter"/>

            <Button
                android:id="@+id/e"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="e"
                android:onClick="letter"/>

            <Button
                android:id="@+id/space2"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text=""
                android:onClick="space"/>

            <Button
                android:id="@+id/u"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="u"
                android:onClick="letter"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/k"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="k"
                android:onClick="letter"/>

            <Button
                android:id="@+id/a"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="a"
                android:onClick="letter"/>

            <Button
                android:id="@+id/l"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="l"
                android:onClick="letter"/>

            <Button
                android:id="@+id/q"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="q"
                android:onClick="letter"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/del"
                android:layout_span="2"
                android:layout_margin="1dp"
                android:layout_height="62dp"
                android:text="del"
                />

            <Button
                android:id="@+id/done"
                android:layout_span="2"
                android:layout_margin="1dp"
                android:layout_height="62dp"
                android:text="done"
                android:onClick="enter"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>