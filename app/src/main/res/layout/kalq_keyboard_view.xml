<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kalq_keyboard_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:layout_width="258dp"
        android:layout_height="258dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/right">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/m"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="m"
                android:onClick="letter"/>

            <Button
                android:id="@+id/b"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="b"
                android:onClick="letter"/>

            <Button
                android:id="@+id/w"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="w"
                android:onClick="letter"/>

            <Button
                android:id="@+id/h"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="h"
                android:onClick="letter"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/p"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="p"
                android:onClick="letter"/>

            <ImageButton
                android:id="@+id/space"
                android:background="@drawable/ripple_white"
                android:src="@drawable/ic_baseline_space_bar_24"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text=""
                android:onClick="space"
                />

            <Button
                android:id="@+id/x"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="x"
                android:onClick="letter"/>

            <Button
                android:id="@+id/c"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="c"
                android:onClick="letter"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/r"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="r"
                android:onClick="letter"/>

            <Button
                android:id="@+id/y"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="y"
                android:onClick="letter"/>

            <Button
                android:id="@+id/s"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="s"
                android:onClick="letter"/>

            <Button
                android:id="@+id/z"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="z"
                android:onClick="letter"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/d"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="d"
                android:onClick="letter"/>

            <Button
                android:id="@+id/n"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="n"
                android:onClick="letter"/>

            <Button
                android:id="@+id/f"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="f"
                android:onClick="letter"/>

            <Button
                android:id="@+id/v"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="v"
                android:onClick="letter"/>
        </TableRow>
    </TableLayout>


    <TableLayout
        android:layout_width="258dp"
        android:layout_height="258dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/g"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="1dp"
                android:onClick="letter"
                android:text="g" />

            <Button
                android:id="@+id/t"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="1dp"
                android:onClick="letter"
                android:text="t" />

            <Button
                android:id="@+id/o"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="1dp"
                android:onClick="letter"
                android:text="o" />

            <Button
                android:id="@+id/j"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="1dp"
                android:onClick="letter"
                android:text="j" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/i"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="1dp"
                android:onClick="letter"
                android:text="i" />

            <Button
                android:id="@+id/e"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="1dp"
                android:onClick="letter"
                android:text="e" />

            <ImageButton
                android:id="@+id/space2"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple_white"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="1dp"
                android:onClick="space"
                android:src="@drawable/ic_baseline_space_bar_24"
                android:text="" />

            <Button
                android:id="@+id/u"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="1dp"
                android:onClick="letter"
                android:text="u" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/k"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="1dp"
                android:onClick="letter"
                android:text="k" />

            <Button
                android:id="@+id/a"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="1dp"
                android:onClick="letter"
                android:text="a" />

            <Button
                android:id="@+id/l"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="1dp"
                android:onClick="letter"
                android:text="l" />

            <Button
                android:id="@+id/q"
                android:textColor="@color/darkgrey"
                android:background="@drawable/ripple"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="1dp"
                android:onClick="letter"
                android:text="q" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/del"
                android:background="@drawable/ripple"
                android:layout_height="62dp"
                android:layout_margin="1dp"
                android:layout_span="2"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                android:text="del" />

            <ImageButton
                android:id="@+id/done"
                android:background="@drawable/ripple_pink"
                android:layout_height="62dp"
                android:layout_margin="1dp"
                android:layout_span="2"
                android:onClick="enter"
                android:src="@drawable/ic_baseline_keyboard_return_24"
                android:text="done" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>