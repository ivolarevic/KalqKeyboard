<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kalq_keyboard_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:layout_width="258dp"
        android:layout_height="258dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/right">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/m"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="m" />

            <Button
                android:id="@+id/b"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="b" />

            <Button
                android:id="@+id/w"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="w" />

            <Button
                android:id="@+id/h"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="h" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/p"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="p" />

            <Button
                android:id="@+id/space"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text=""
                android:onClick="space"
                />

            <Button
                android:id="@+id/x"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="x" />

            <Button
                android:id="@+id/c"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="c" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/r"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="r" />

            <Button
                android:id="@+id/y"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="y" />

            <Button
                android:id="@+id/s"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="s" />

            <Button
                android:id="@+id/z"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="z" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/d"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="d" />

            <Button
                android:id="@+id/n"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="n" />

            <Button
                android:id="@+id/f"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="f" />

            <Button
                android:id="@+id/v"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="v" />
        </TableRow>
    </TableLayout>


    <TableLayout
        android:layout_width="258dp"
        android:layout_height="258dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/g"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_margin="1dp"
                android:text="g" />

            <Button
                android:id="@+id/t"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="t" />

            <Button
                android:id="@+id/o"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="o" />

            <Button
                android:id="@+id/j"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="j"
                android:clickable="true"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/i"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="i" />

            <Button
                android:id="@+id/e"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="e" />

            <Button
                android:id="@+id/space2"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text=""
                android:onClick="space"/>

            <Button
                android:id="@+id/u"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="u" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/k"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="k" />

            <Button
                android:id="@+id/a"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="a" />

            <Button
                android:id="@+id/l"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="l" />

            <Button
                android:id="@+id/q"
                android:layout_margin="1dp"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:text="q" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/del"
                android:layout_span="2"
                android:layout_margin="1dp"
                android:layout_height="62dp"
                android:text="del"
                android:onClick="delete"/>

            <Button
                android:id="@+id/done"
                android:layout_span="2"
                android:layout_margin="1dp"
                android:layout_height="62dp"
                android:text="done"
                android:onClick="enter"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>